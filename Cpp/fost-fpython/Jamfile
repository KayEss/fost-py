using testing ;

fost-exe fpython
    :
        ../../../Boost//boost-python-dll
        /python//python
        ../fost-pyhost/
        ../fost-python/
        fpython.cpp
    ;

rule run-fpython ( testname ) {
    local testfile = $(testname) ".py" ;
    local fullname = "fpython-run-" $(testname) ;
    run fpython
        :
        :
            $(testfile:J)
        :
        :
            $(fullname:J)
        ;
}

run-fpython test01 ;
run-fpython test02 ;
